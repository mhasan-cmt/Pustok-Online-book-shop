<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/setting_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <com.google.android.material.appbar.MaterialToolbar
                 android:layout_width="match_parent"
                 android:layout_height="?attr/actionBarSize"
                 android:id="@+id/settings_top_bar"
                 app:navigationIcon="@drawable/ic_arrow_back"
                 app:title="প্রোফাইল সেটিংস"
                 app:titleTextColor="@color/white"
                 />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_app_bar"
            android:padding="8dp"
            app:cardElevation="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="20dp"
                >
                <ImageView
                    android:id="@+id/setting_user_img"
                    android:layout_width="wrap_content"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/profile_desc"
                    />
                <TextView
                    android:id="@+id/settings_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shafin"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_marginVertical="8dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/second_card"
            android:layout_below="@id/first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="8dp"
            android:translationY="-10dp"
            android:paddingHorizontal="8dp"
            android:backgroundTint="#FFD600"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_update_text"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sagar_normal"
                android:paddingVertical="10dp"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                app:drawableStartCompat="@drawable/ic_user" />
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_card"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/sagar_normal"
            android:text="@string/logout_text"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</ScrollView>