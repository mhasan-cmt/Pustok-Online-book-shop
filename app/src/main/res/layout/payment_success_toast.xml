<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="20dp"
    android:id="@+id/custom_success_toast"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        >
        <LinearLayout
            android:id="@+id/success_start_linear"
            android:layout_alignParentStart="true"
            android:layout_width="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="#57B447"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/success_start_linear"
            android:weightSum="6"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="8dp"
                android:src="@drawable/ic_success" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textColor="#57B447"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Payment is Successful!"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:textStyle="bold">
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>